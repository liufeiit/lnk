<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%X{trackingCode}] [%thread] [%logger{0}] %msg%n</pattern>
		</encoder>
	</appender>
	<root level="INFO">
	    <appender-ref ref="STDOUT" />
	</root>
</configuration>